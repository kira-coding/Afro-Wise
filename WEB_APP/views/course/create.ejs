<%- include('../partials/header') %>

    <section>
        <div class="py-8 lg:py-16 px-4 mx-auto w-1/3 justify-center bg-amber-800 bg-opacity-40  mt-9 rounded-2xl">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-50">
                Login
            </h2>
            <form action="" method="post" id="formLogin" class="space-y-8 ">

                        <div class="bg-opacity-95">
                            <label for="title" class="block  mb-2 text-sm font-bold text-violet-300">Title</label>
                            <input type="text" id="title" name="title" placeholder="eg. My title"
                                class="bg-gray-50 border-gray-400  text-gray-900 text-sm rounded-lg focus:ring-amber-600  focus:border-amber-600 block w-full p-2.5  ">
                        </div>
                        <div class="bg-opacity-95">
                            <label for="discription"
                                class="block  mb-2 text-sm font-bold text-violet-300">Discription</label>
                            <textarea id="discription" name="discription"
                                class="bg-gray-50 border-gray-400  text-gray-900 text-sm rounded-lg focus:ring-amber-600  focus:border-amber-600 block w-full p-2.5">
                    </textarea>
                        </div>
                        <div class="bg-opacity-95">
                            <label for="picture" class="block  mb-2 text-sm font-bold text-violet-300">Picture</label>
                            <input type="file" id="picture" name="picture"
                                class="bg-gray-50 border-gray-400  text-gray-900 text-sm rounded-lg focus:ring-amber-600  focus:border-amber-600 block w-full p-2.5">
                        </div>
                        <div class="bg-opacity-95">
                            <label for="price" class="block  mb-2 text-sm font-bold text-violet-300">Price</label>
                            <input type="number" id="price" name="price"
                                class="bg-gray-50 border-gray-400  text-gray-900 text-sm rounded-lg focus:ring-amber-600  focus:border-amber-600 block w-full p-2.5">
                        </div>
                        <div class="bg-opacity-95">
                            <label for="price_freq" class="block  mb-2 text-sm font-bold text-violet-300">Price</label>
                            <input type="price_freq" id="price_freq" name="price_freq"
                                class="bg-gray-50 border-gray-400  text-gray-900 text-sm rounded-lg focus:ring-amber-600  focus:border-amber-600 block w-full p-2.5">
                        </div>
                        <button type="submit"
                            class="bg-yellow-900 px-10 py-3 ml-32 mr-auto text-3xl font-serif font-bold text-slate-400 rounded-lg">Login</button>
            </form>

        </div>

    </section>


    <%- include('../partials/footer') %>